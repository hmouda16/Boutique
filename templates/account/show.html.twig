{% extends 'base.html.twig' %}

{% block title %}Ma commande
{% endblock %}

{% block content %}
	<h1>Ma commande
		{{order.reference}}</h1>

	<table class="table">
		<thead>
			<tr>
				<th scope="col">Produit</th>
				<th scope="col">Quantit√©</th>
				<th scope="col">Prix unitaire</th>
				<th scope="col">Total</th>
			</tr>
		</thead>
		<tbody>
			{% for product in order.orderDetails %}
				<tr>
					<th scope="row">{{product.product.name}}</th>
					<td>{{product.quantity}}</td>
					<td>{{(product.price/100) | number_format(2) }}$</td>
					<td>{{(product.price * product.quantity /100) | number_format(2)}}$</td>
				</tr>


				<div>
					<th>Totals commandes</th>

					<td class="text-end">{{((order.total + order.carrier.price)/100)  | number_format(2)}}$</td>

				</div>


			{% endfor %}


		</tbody>
	</table>

{% endblock %}
